# GENERAL:
NODE_ENV=development # development/test/production
PORT=3000
DB_URL="postgresql://myuser:mypassword@localhost:5432/mydatabase" # database connection dsn
JWT_SECRET=secret # jwt secret
REFRESH_SECRET=refresh-secret # refresh secret
# CORS:
# OPTION 1: Permissive (Wildcard)
CORS_ORIGIN=*
CORS_EXPOSED_HEADERS=*
CORS_ALLOWED_METHODS=*
CORS_ALLOWED_HEADERS=*
# OPTION 2: Strict / Production (Comma-separated)
# CORS_ORIGIN=http://localhost:5173,https://dashboard.myapp.com
# CORS_EXPOSED_HEADERS=Content-Length,X-Total-Count
# CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH
# CORS_ALLOWED_HEADERS=Content-Type,Authorization
GEMINI_API_KEY=gemini
GEMINI_MODEL=gemini-2.5-flash