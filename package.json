{
  "name": "suggestme-2.0",
  "version": "2.0.0",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "bun run --watch src/index.ts",
    "build:normal": "bun build ./src/index.ts --outdir ./dist --target bun",
    "build:binary": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile suggestme-api ./src/index.ts",
    "start": "bun run --watch ./dist/index.js",
    "format": "prettier --write .",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "seed": "bun run scripts/index.ts",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:purge": "docker compose down --volumes"
  },
  "dependencies": {
    "@bogeychan/elysia-logger": "^0.1.10",
    "@elysiajs/cookie": "^0.8.0",
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "@google/genai": "^1.33.0",
    "drizzle-orm": "^0.44.7",
    "elysia": "^1.4.19",
    "elysia-helmet": "^3.0.0",
    "pg": "^8.16.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@types/pg": "^8.16.0",
    "bun-types": "^1.3.4",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "tsx": "^4.21.0",
    "typescript-eslint": "^8.49.0"
  },
  "module": "src/index.js",
  "lint-staged": {
    ".{ts,js}": "eslint — cache — fix",
    ".{ts,js,css,md}": "prettier — write",
    ".js": "eslint — cache — fix",
    ".{js,css,md}": "prettier — write"
  }
}
